    "version": "2.0.0",
    "tasks": [
        {
            "label": "BuildTests",
            "type": "shell",
            "command": "make",
            "args": [
                "Tests"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]
}